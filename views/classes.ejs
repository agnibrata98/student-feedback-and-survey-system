<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Classes Dashboard</title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <!-- css link -->

    <link rel="stylesheet" href="/css/creatsurvey.css" />
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/classes.css" />

    <!-- Bootstrap Icons -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"
      rel="stylesheet"
    />

  </head>
  <body>
    <div class="container-fluid">
      <div class="row">
        <!-- Sidebar -->
        <%- include('./layouts/sidebar.ejs')%>

        <!-- Main Content -->
        <div class="col-md-10 content">
          <!-- Topbar -->
          <div
            class="d-flex justify-content-between align-items-center mb-4 mt-3"
          >
            <button
              class="btn d-lg-none"
              type="button"
              data-bs-toggle="collapse"
              data-bs-target="#sidebarMenu"
            >
              <i class="bi bi-list"></i>
            </button>

            <!-- Search bar with icon -->
            <div class="input-group w-50">
              <input
                type="text"
                class="form-control border"
                placeholder="Search"
              />
            </div>

         <!-- create survey button -->

            <div class="d-flex align-items-center">
              <button
                class="btn btn-light me-1"
                data-bs-toggle="modal"
                data-bs-target="#profileModal"
              >
                <i class="bi bi-person-circle"></i>
              </button>
              <a href="/create-survey" class="btn btn-danger">Create Survey</a>
            </div>
          </div>

          <h3>Classes</h3>

          <div class="row mt-4">
            <!-- Table Section -->
            <div class="col-md-8">
              <div class="card-custom shadow-sm">
                <div
                  class="d-flex justify-content-between align-items-center mb-3"
                >
                  <h5>
                    <img src="/images/folder 1.png" alt="" /> 1
                  </h5>
                  <!-- Add New Button (inside your card) -->
                  <button
                    class="btn-add"
                    data-bs-toggle="modal"
                    data-bs-target="#addDeptModal"
                  >
                    + Add New
                  </button>

                  <!-- Modal -->
                  <div
                    class="modal fade"
                    id="addDeptModal"
                    tabindex="-1"
                    aria-labelledby="addDeptModalLabel"
                    aria-hidden="true"
                  >
                    <div class="modal-dialog">
                      <div
                        class="modal-content"
                        style="background-color: #fff7ed"
                      >
                        <div class="modal-header border-0">
                          <h5 class="modal-title" id="addDeptModalLabel">
                            Department
                          </h5>
                          <button
                            type="button"
                            class="btn-close"
                            data-bs-dismiss="modal"
                            aria-label="Close"
                          ></button>
                        </div>

                        <div class="modal-body">
                          <!-- <form id="deptForm"> -->
                            <!-- Input fields container -->
                            <div id="inputContainer">
                                <form action="/create-class" method="post">
                                    <div class="input-group mb-3">
                                      <input
                                        type="text"
                                        class="form-control"
                                        name="name"
                                        placeholder="Input field"
                                        required
                                      />
                                      <!-- <button
                                        class="btn btn-outline-secondary add-input"
                                        type="button"
                                      >
                                        <i class="bi bi-plus"></i>
                                      </button> -->
                                    </div>
                                    <div class="text-end">
                                      <input type="submit" class="btn btn-danger" />
                                    </div>
                                </form>
                            </div>

                          <!-- </form> -->
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <table class="table table-bordered align-middle">
                  <thead class="table-light">
                    <tr>
                      <th>Department</th>
                      <th>Conducted survey</th>
                      <th>View survey</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% classSurveyCounts.forEach((cls) => { %>
                    <tr>
                        <td><%= cls.name %></td>
                        <td><%= cls.surveyCount  || 0 %></td>
                        <td><a href="/surveys/<%= cls.id %>">Click here</a></td>
                    </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            </div>

            <!-- Chart & Progress Section -->
            <div class="col-md-4">
              <div class="card-custom shadow-sm text-center">
                <div class="mb-4">
                  <!-- Chart Placeholder -->
                  <div
                    style="
                      height: 150px;
                      width: 150px;
                      background: #f6f6f6;
                      border-radius: 50%;
                      margin: auto;
                    "
                  >
                    <p class="pt-5">Chart</p>
                  </div>
                </div>
                <div class="text-start">
                  <p class="mb-1">Assigned survey</p>
                  <div class="progress mb-3">
                    <div
                      class="progress-bar progress-bar-orange"
                      style="width: 70%"
                    ></div>
                  </div>

                  <p class="mb-1">Avg. participation</p>
                  <div class="progress mb-3">
                    <div
                      class="progress-bar progress-bar-red"
                      style="width: 40%"
                    ></div>
                  </div>

                  <p class="mb-1">Feedback summary</p>
                  <div class="progress mb-2">
                    <div
                      class="progress-bar progress-bar-pink"
                      style="width: 60%"
                    ></div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Profile Modal -->
    <div class="modal fade" id="profileModal" tabindex="-1">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Account</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
            ></button>
          </div>
          <div class="modal-body">
            <a href="#" class="btn btn-outline-primary w-100 mb-2">Profile</a>
            <a href="#" class="btn btn-outline-danger w-100" data-bs-toggle="modal"
            data-bs-target="#logoutModal" data-bs-dismiss="modal">Logout</a>
          </div>
        </div>
      </div>
    </div>

    <!-- Logout Confirmation Modal start -->
    <%- include('./layouts/logout-confirmation-modal.ejs')%>
    <!-- Logout Confirmation Modal end -->
    
 

    <!-- custome js -->

    <script src="/js/script.js"></script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
