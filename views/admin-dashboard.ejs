<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Dashboard</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />

  <!--  css -->

  <link rel="stylesheet" href="/css/style.css" />

  <!-- Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
  <!-- flaticon icon -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/flat-ui/2.3.0/css/flat-ui.min.css"
    integrity="sha512-6f7HT84a/AplPkpSRSKWqbseRTG4aRrhadjZezYQ0oVk/B+nm/US5KzQkyyOyh0Mn9cyDdChRdS9qaxJRHayww=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />

</head>

<body>
  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <%- include('./layouts/sidebar.ejs')%>

        <!-- Main content -->
        <main class="col-lg-10 ms-sm-auto px-md-4 content">
          <!-- Topbar -->
          <div class="d-flex justify-content-between align-items-center mb-4 mt-3">
            <button class="btn d-lg-none" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu">
              <i class="bi bi-list"></i>
            </button>

            <!-- Search bar with icon -->
            <div class="input-group w-50">
              <input type="text" class="form-control border" placeholder="Search" />
            </div>

            <!-- creat survey button -->

            <div class="d-flex align-items-center">
              <button class="btn btn-light me-1" data-bs-toggle="modal" data-bs-target="#profileModal">
                <i class="bi bi-person-circle"></i>
              </button>
              <a href="/create-survey" class="btn btn-danger">Create Survey</a>
            </div>
          </div>

          <!-- Dashboard Title -->
          <h1 class="title-1">Welcome, <%= data.name%>
          </h1>

          <!-- Stats cards -->
          <div class="row g-3 mb-4">
            <div class="col-md-4 col-lg-3">
              <div class="card p-3 text-center stats-card">
                <div class="card-body">
                  <i class="bi bi-journal-text fs-1 mb-2"></i>
                  <h6>Survey conducted</h6>
                  <h4>
                    <%=totalSurveyCount%>
                  </h4>
                </div>
              </div>
            </div>
            <div class="col-md-4 col-lg-3">
              <div class="card p-3 text-center stats-card">
                <div class="card-body">
                  <i class="bi bi-pie-chart fs-1 mb-2"></i>
                  <h6>Participation rate</h6>
                  <h4>65%</h4>
                </div>
              </div>
            </div>
            <div class="col-md-4 col-lg-3">
              <div class="card p-3 text-center stats-card">
                <div class="card-body">
                  <i class="bi bi-ui-radios-grid fs-1 mb-2"></i>
                  <h6>Active surveys</h6>
                  <h4>
                    <%=totalSurveyCount%>
                  </h4>
                </div>
              </div>
            </div>
            <div class="col-md-4 col-lg-3">
              <div class="card p-3 text-center stats-card">
                <div class="card-body">
                  <i class="bi bi-x-circle fs-1 mb-2"></i>
                  <h6>Faild surveys</h6>
                  <h4>2</h4>
                </div>
              </div>
            </div>
          </div>

          <!-- Insights + Leaderboard + Survey Result -->
          <div class="row g-3 equal-cards">

            <!-- Survey Insights -->
            <div class="col-md-6 col-lg-4">
              <div class="card p-3 h-100">
                <h6>Survey insights</h6>
                <ul class="mt-3">
                  <% if (insights.length> 0) { %>
                    <% insights.forEach(function(item, idx) { %>
                      <li>
                        <span>
                          <img class="small-ellipse" src="/images/Ellipse <%= idx+8 %>.png" alt="">
                        </span>
                        <%= item.surveyId ? item.surveyId.title : 'Survey' %> - <%= item.totalResponded %> responses
                      </li>
                      <% }) %>
                        <% } else { %>
                          <li>No survey responses yet</li>
                          <% } %>
                </ul>
              </div>
            </div>

            <!-- Engagement Leaderboard -->
            <div class="col-md-6 col-lg-4">
              <div class="card p-3 h-100">
                <h6>Engagement leaderboard</h6>
                <ul class="mt-3">
                  <% if (leaderboard.length> 0) { %>
                    <% leaderboard.forEach(function(cls, idx) { %>
                      <li>
                        <img class="lead-img"
                          src="/images/<%= ['snakes_359301 2.png','digital_2171170 2.png','neural-net_16848997 2.png','gear_10152810 2.png'][idx % 4] %>"
                          alt="">
                        <%= cls.name %> â€“ <%= cls.percent %>%
                      </li>
                      <% }) %>
                        <% } else { %>
                          <li>No engagement data yet</li>
                          <% } %>
                </ul>
              </div>
            </div>

            <!-- Recent Activities -->
            <div class="col-md-6 col-lg-4">
              <div class="card p-3 h-100">
                <h6>Survey Result</h6>
                <h6 class="mt-3">Recent Activities</h6>
                <ul>
                  <% if (recent.length> 0) { %>
                    <% recent.forEach(function(rsp, idx) { %>
                      <li>
                        <span>
                          <img class="big-ellipse" src="/images/Ellipse <%= idx+8 %>.png" alt="">
                        </span>
                        <%= rsp.survey_id ? rsp.survey_id.title : 'Survey' %> submitted
                      </li>
                      <% }) %>
                        <% } else { %>
                          <li>No recent activity yet</li>
                          <% } %>
                </ul>
              </div>
            </div>

          </div>

        </main>
    </div>
  </div>

  <!-- Profile Modal -->
  <div class="modal fade" id="profileModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Account</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <a href="#" class="btn btn-outline-primary w-100 mb-2">Profile</a>
          <a href="#" class="btn btn-outline-danger w-100" data-bs-toggle="modal" data-bs-target="#logoutModal"
            data-bs-dismiss="modal">Logout</a>
        </div>
      </div>
    </div>
  </div>

  <!-- Logout Confirmation Modal start -->
  <%- include('./layouts/logout-confirmation-modal.ejs')%>
    <!-- Logout Confirmation Modal end -->


    <!-- custome js -->

    <script src="/admin/assets/"></script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>