        <div class="modal-content text-center">
          <div class="modal-header">
            <h5 class="modal-title">Delete Question</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
          </div>
          <div class="modal-body">
            <p>Are you sure you want to delete this question?</p>
            <div class="d-flex justify-content-center gap-3">
              <button type="button" class="btn btn-danger" id="confirmDelete">Yes</button>
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                No
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- JS -->
    <script>
      let currentQuestionBox = null;
      let deleteQuestionBox = null;

      // Add Question
      document.getElementById("addQuestionForm").addEventListener("submit", function (e) {
        e.preventDefault();
        const questionInput = document.getElementById("addQuestionInput");
        const text = questionInput.value.trim();
        if (!text) return;

        const questionList = document.getElementById("questionList");

        const newBox = document.createElement("div");
        newBox.className =
          "question-box d-flex justify-content-between align-items-center mb-2";
        newBox.innerHTML = `
          <span></span>
          <div>
            <a href="#" class="edit-question">
              <img src="../admin/assets/images/edit-text 1.png" alt="Edit"/>
            </a>
            <a href="#" class="delete-question">
              <img src="../admin/assets/images/delete 1.png" alt="Delete"/>
            </a>
          </div>
        `;
        questionList.appendChild(newBox);

        reorderQuestions();
        newBox.querySelector("span").textContent =
          "Question " +
          questionList.querySelectorAll(".question-box").length +
          ": " +
          text;

        questionInput.value = "";
        bootstrap.Modal.getInstance(document.getElementById("addQuestionModal")).hide();
      });

      // Edit / Delete events
      document.addEventListener("click", function (e) {
        if (e.target.closest(".edit-question")) {
          e.preventDefault();
          currentQuestionBox = e.target.closest(".question-box");
          const qText = currentQuestionBox.querySelector("span").textContent;
          document.getElementById("editQuestionInput").value = qText.replace(/Question \d+: /, "");
          new bootstrap.Modal(document.getElementById("editQuestionModal")).show();
        }

        if (e.target.closest(".delete-question")) {
          e.preventDefault();
          deleteQuestionBox = e.target.closest(".question-box");
          new bootstrap.Modal(document.getElementById("deleteQuestionModal")).show();
        }
      });

      // Save Edit
      document.getElementById("editQuestionForm").addEventListener("submit", function (e) {
        e.preventDefault();
        if (currentQuestionBox) {
          const newText = document.getElementById("editQuestionInput").value.trim();
          if (newText) {
            const num = currentQuestionBox.querySelector("span").textContent.match(/Question \d+/);
            const qNum = num ? num[0] : "Question";
            currentQuestionBox.querySelector("span").textContent = qNum + ": " + newText;
          }
        }
        bootstrap.Modal.getInstance(document.getElementById("editQuestionModal")).hide();
      });

      // Confirm Delete
      document.getElementById("confirmDelete").addEventListener("click", function () {
        if (deleteQuestionBox) {
          deleteQuestionBox.remove();
          deleteQuestionBox = null;
          reorderQuestions();
        }
        bootstrap.Modal.getInstance(document.getElementById("deleteQuestionModal")).hide();
      });

      // Reorder function
      function reorderQuestions() {
        const spans = document.querySelectorAll("#questionList .question-box span");
        spans.forEach((span, idx) => {
          const text = span.textContent.replace(/Question \d+: /, "");
          span.textContent = "Question " + (idx + 1) + ": " + text;
        });
      }
    </script>

    <!-- Bootstrap JS -->
