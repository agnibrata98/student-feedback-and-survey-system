<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Surveys</title>
    <!--Bootstrap CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/creatsurvey.css" />
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/survey.css">


    <!-- Bootstrap Icons -->

    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />

</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <%- include('./layouts/sidebar.ejs')%>

                <!-- Main Content -->
                <div class="col-md-10 content">
                    <!-- Topbar -->
                    <div class="d-flex justify-content-between align-items-center mb-4 mt-3">
                        <button class="btn d-lg-none" type="button" data-bs-toggle="collapse"
                            data-bs-target="#sidebarMenu">
                            <i class="bi bi-list"></i>
                        </button>

                        <!-- Search bar with icon -->
                        <div class="input-group w-50">
                            <input type="text" class="form-control border" placeholder="Search" />
                        </div>

                        <!-- account button -->
                        <button class="btn btn-light me-1" data-bs-toggle="modal" data-bs-target="#profileModal">
                            <i class="bi bi-person-circle"></i>
                        </button>
                    </div>

                    <!-- Welcome -->
                    <div class="welcome-card p-3 mb-4">
                        <h5>Welcome, <%=data.name%>
                        </h5>
                        <p class="mb-0">
                            Welcome to all surveys page <%=data.name%>.
                        </p>
                    </div>

                    <!-- All Surveys Button -->
                    <div class="text-center mb-4">
                        <button class="btn btn-custom px-4 py-2">All Surveys</button>
                    </div>

                    <!-- Survey Cards -->
                    <div class="row g-4">
                        <% if (surveys.length> 0) { %>
                            <% surveys.forEach(survey=> { %>
                                <div class="col-md-4 col-lg-3">
                                    <div class="card survey-card p-3">
                                        <h6>
                                            <%= survey.title %>
                                        </h6>
                                        <p class="small">
                                            <%= survey.description || "No description available." %>
                                        </p>
                                        <div>
                                            <!-- Edit Survey -->
                                            <a href="/survey/edit/<%= survey._id %>">
                                                <img src="/images/edit-text 1.png" alt="Edit" />
                                            </a>

                                            <!-- Delete Survey -->
                                            <a href="/survey/delete/<%= survey._id %>">
                                                <img src="/images/delete 1.png" alt="Delete" />
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <% }) %>
                                    <% } else { %>
                                        <div class="col-12">
                                            <p class="text-center">No surveys found for <%= className %>.</p>
                                        </div>
                                        <% } %>
                    </div>

                    <!-- Pagination -->
                    <nav class="mt-4">
                        <ul class="pagination justify-content-center">
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item"><a class="page-link" href="#">&gt;</a></li>
                        </ul>
                    </nav>
                    </main>
                </div>
        </div>


        <!-- Profile Modal -->
        <div class="modal fade" id="profileModal" tabindex="-1">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Account</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <a href="#" class="btn btn-outline-primary w-100 mb-2">Profile</a>
                        <a href="#" class="btn btn-outline-danger w-100" data-bs-toggle="modal"
                        data-bs-target="#logoutModal" data-bs-dismiss="modal">Logout</a>
                    </div>
                </div>
            </div>
        </div>


        <!-- Logout Confirmation Modal start -->
        <%- include('./layouts/logout-confirmation-modal.ejs')%>
        <!-- Logout Confirmation Modal end -->

        <!-- custome js -->

        <script src="/js/script.js"></script>

        <!-- Bootstrap JS -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>